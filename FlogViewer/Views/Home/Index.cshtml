@{
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Flog Viewer</title>

    <link rel="stylesheet" href="~/lib/bootswatch/bootstrap_spacelab.css" />
    <link rel="stylesheet" href="~/lib/bootswatch/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link href="~/lib/kendo/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="~/lib/kendo/styles/kendo.default.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body ng-app="superViewer">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">Flog Viewer</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#/logs">Error Logs</a></li>
                    <li><a href="#/perf">Performance Logs</a></li>
                    <li><a href="#/about">About</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li style="padding-top: 4px;">
                        <select class="form-control" id="connectionChooser" placeholder="Choose a connection" style="font-size: 14px;"
                                onchange="connectionChanged();">                            
                            <option>DEV</option>
                        </select>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div ng-view></div>

    <!-- Libs -->
    <script src="~/bower_components/jquery/dist/jquery.js"></script>
    <script src="~/bower_components/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/bower_components/angular/angular.js"></script>
    <script src="~/bower_components/angular-sanitize/angular-sanitize.js"></script>
    <script src="~/lib/kendo/js/kendo.core.min.js"></script>
    <script src="~/lib/kendo/js/kendo.ui.core.min.js"></script>
    <script src="~/bower_components/angular-mocks/angular-mocks.js"></script>
    <script src="~/bower_components/angular-resource/angular-resource.js"></script>
    <script src="~/bower_components/angular-route/angular-route.js"></script>

    <!-- application -->
    <script src="app/app.js"></script>

    <!-- domain classes -->
    <script src="app/logs/log.js"></script>

    <!-- services -->
    <script src="app/common/CommonUtilities.js"></script>

    <!-- controllers -->
    <script src="app/logs/logsCriteriaCtrl.js"></script>
    <script src="app/performance/perfLogController.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            var conn = localStorage.getItem("connection");
            $('#connectionChooser').val(conn);
        });

        function connectionChanged() {
            var newConn = $('#connectionChooser').val();
            localStorage.setItem("connection", newConn);
            window.location.reload();
        }
    </script>
</body>
</html>